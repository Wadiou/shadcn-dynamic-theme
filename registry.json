					"target": "components/base-color-switcher.tsx"
				},
				{
					"path": "registry/new-york/theme-color-switcher.tsx",
					"type": "registry:component",
					"target": "components/theme-color-switcher.tsx"
				},
				{
					"path": "registry/common/color-theme-provider.tsx",
					"type": "registry:component",
					"target": "components/color-theme-provider.tsx"
				},
				{
					"path": "registry/common/theme-script.tsx",
					"type": "registry:component",
