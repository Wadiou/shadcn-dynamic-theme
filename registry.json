					"target": "components/color-theme-provider.tsx"
				},
				{
					"path": "registry/common/theme-script.tsx",
					"type": "registry:component",
					"target": "components/theme-script.tsx"
				},
				{
					"path": "registry/common/generate-themes.js",
					"type": "registry:lib",
					"target": "scripts/generate-themes.js"
				},
				{
					"path": "registry/common/themes.json",
					"type": "registry:lib",
					"target": "scripts/themes.json"
				}
			]
		},
